{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "OrderDb": ""
  },
  "Database": {
    "AutoMigrate": true
  },
  "Authentication": {
    "Authority": "",
    "Audience": "order-api",
    "SecretKey": ""
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "post:/api/orders",
        "Period": "1m",
        "Limit": 10
      }
    ]
  },
  "ExternalServices": {
    "CartService": {
      "BaseUrl": "https://localhost:5001",
      "TimeoutSeconds": 30
    },
    "CatalogService": {
      "BaseUrl": "https://localhost:5002",
      "TimeoutSeconds": 30
    }
  },
  "EnableSwagger": true
}
